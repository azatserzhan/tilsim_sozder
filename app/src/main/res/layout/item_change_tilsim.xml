<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/changeTilsimLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        android:background="@drawable/bubble_tilsim"
        android:layout_marginBottom="65dp">

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/changeTilsimBubbleSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bg_active"
            app:bsb_bubble_color="?attr/color_primary"
            app:bsb_bubble_text_color="?attr/seek_bar_style"
            app:bsb_max="153"
            app:bsb_min="0"
            app:bsb_second_track_color="?attr/color_primary"
            app:bsb_section_text_color="?attr/color_primary"
            app:bsb_section_text_position="bottom_sides"
            app:bsb_show_progress_in_float="false"
            app:bsb_show_section_mark="false"
            app:bsb_show_section_text="true"
            app:bsb_show_thumb_text="true"
            app:bsb_track_color="?attr/color_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tilsim_choose"
            android:layout_gravity="center"
            android:textColor="?attr/color_primary"/>

    </LinearLayout>

</LinearLayout>