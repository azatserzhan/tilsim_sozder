<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.tilsimsozder.MainActivity"
    android:background="@drawable/main_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_liner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_whiteMode"
        android:gravity="top">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/p_title"
            android:id="@+id/textView2"
            android:gravity="center"
            android:paddingTop="30dp"
            android:textColor="#ffffff"
            android:paddingBottom="30dp"
            android:onClick="changeLanguage"
            android:clickable="true"
            tools:fontFamily="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/p_text"
            android:id="@+id/textView3"
            android:padding="20dp"
            android:textColor="#214446"
            android:background="#72ffffff"
            android:onClick="zoomText"
            android:clickable="true"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:src="@drawable/lotus"
            android:onClick="share"/>

    </LinearLayout>
    </ScrollView>

    <SlidingDrawer
        android:content="@+id/linearLayout"
        android:handle="@+id/button"
        android:id="@+id/slidingDrawer"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:background="#4e8285"
            android:id="@+id/linearLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <!--
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/imageView"
                android:src="@drawable/logo"
                android:foregroundGravity="center_vertical|center_horizontal" />-->

            <ListView
                android:id="@+id/listView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <Button
            android:background="@color/menu_bg_white"
            android:id="@+id/button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="        Батырма        "
            android:textColor="@color/menu_text_white" />
    </SlidingDrawer>

</RelativeLayout>
