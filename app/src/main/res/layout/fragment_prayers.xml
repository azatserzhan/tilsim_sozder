<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prayerRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bg_primary">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchPrayer"
        android:layout_width="match_parent"
        app:queryHint="Іздеу"
        app:searchHintIcon="@drawable/ic_search"
        app:searchIcon="@drawable/ic_search"
        android:background="@drawable/bubble_search"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/prayerListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/select_prayer"/>




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_primary"

        tools:context="kz.tilsimsozder.TilsimSozderActivity">


        <ScrollView
            android:id="@+id/scrollViewMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingBottom="56dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="30dp">

                    <TextView
                        android:id="@+id/TextViewHeader"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:text="@string/prayer_title"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="?attr/text_body"
                        tools:fontFamily="monospace" />

                    <ImageView
                        android:id="@+id/shareImageView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_share" />
                </LinearLayout>


                <TextView
                    android:id="@+id/bodyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/main_text"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:padding="20dp"
                    android:text="@string/tilsim_sozder_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/text_body" />
            </LinearLayout>
        </ScrollView>

        <SeekBar

            android:id="@+id/seekBarMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="?attr/seek_bar_style"
            android:max="100"
            android:progress="100" />

        <!--https://www.flaticon.com/packs/free-basic-ui-elements-->

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/navigationFrameLayout"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/prayerBackImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/ic_prayer_back"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/prayerNextImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|right"
                android:layout_margin="20dp"
                android:background="@drawable/ic_prayer_back"
                android:rotation="180"
                tools:ignore="MissingConstraints" />
        </FrameLayout>

        <SlidingDrawer
            android:id="@+id/slidingDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:content="@+id/linearLayout"
            android:handle="@+id/bottomMenuButton"
            tools:visibility="gone">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4e8285"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listViewMainScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/bottomMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bubble_navigation_button"
                android:text="        Батырма        "
                android:textColor="?attr/text_body" />
        </SlidingDrawer>
    </RelativeLayout>

</LinearLayout>


