<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prayerRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_text_white"
    tools:context="kz.tilsimsozder.TilsimSozderActivity">


    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_whiteMode"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:text="@string/prayer_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#214446"
                tools:fontFamily="monospace" />

            <TextView
                android:id="@+id/TextViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/main_text"
                android:clickable="true"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/tilsim_sozder_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#214446" />

            <ImageView
                android:id="@+id/shareImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:src="@drawable/lotus" />

        </LinearLayout>
    </ScrollView>

    <SeekBar

        android:id="@+id/seekBarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:max="100"
        android:progress="100" />

    <!--https://www.flaticon.com/packs/free-basic-ui-elements-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/prayerBackImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@mipmap/ic_back"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/prayerNextImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_margin="2dp"
            android:background="@mipmap/ic_next"
            tools:ignore="MissingConstraints" />
    </FrameLayout>

    <SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:content="@+id/linearLayout"
        android:handle="@+id/button"
        tools:visibility="gone">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4e8285"
            android:orientation="vertical">
            <!--
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/imageView"
                android:src="@drawable/logo"
                android:foregroundGravity="center_vertical|center_horizontal" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/prayerListRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/listViewMainScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_navigation_button"
            android:text="        Батырма        " />
    </SlidingDrawer>
</RelativeLayout>