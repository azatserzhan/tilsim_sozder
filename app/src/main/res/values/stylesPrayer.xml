<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bg_primary">@color/bg_primary_dark</item>
        <item name="bg_active">@color/bg_active_dark</item>
        <item name="text_body">@color/text_body_dark</item>
        <item name="text_header">@color/text_header_dark</item>
        <item name="divider_style">@color/divider_style_dark</item>
        <item name="seek_bar_style">@color/seek_bar_style_dark</item>
        <item name="seek_bar_active_style">@color/seek_bar_active_style_dark</item>



        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomThemeLight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="bg_primary">@color/bg_primary_light</item>
        <item name="bg_active">@color/bg_active_light</item>
        <item name="text_body">@color/text_body_light</item>
        <item name="text_header">@color/text_header_light</item>
        <item name="divider_style">@color/divider_style_light</item>
        <item name="seek_bar_style">@color/seek_bar_style_light</item>
        <item name="seek_bar_active_style">@color/seek_bar_active_style_light</item>



        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
