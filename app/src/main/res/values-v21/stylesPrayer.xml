<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="bg_primary">@color/bg_primary_dark</item>
        <item name="bg_active">@color/bg_active_dark</item>
        <item name="text_body">@color/text_body_dark</item>
        <item name="text_body_second">@color/text_body_second_dark</item>
        <item name="text_header">@color/text_header_dark</item>
        <item name="divider_style">@color/divider_style_dark</item>
        <item name="seek_bar_style">@color/seek_bar_style_dark</item>
        <item name="seek_bar_active_style">@color/seek_bar_active_style_dark</item>
        <item name="menu_icon">@color/menu_icon_dark</item>
        <item name="color_primary">@color/gold</item>
        <item name="color_star">@android:color/white</item>
        <item name="divider_list">@color/divider_list_dark</item>



        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bg_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:editTextColor">@color/gold</item>
    </style>

    <style name="CustomThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bg_primary">@color/bg_primary_light</item>
        <item name="bg_active">@color/bg_active_light</item>
        <item name="text_body">@color/text_body_light</item>
        <item name="text_body_second">@color/text_body_second_light</item>
        <item name="text_header">@color/text_header_light</item>
        <item name="divider_style">@color/divider_style_light</item>
        <item name="seek_bar_style">@color/seek_bar_style_light</item>
        <item name="seek_bar_active_style">@color/seek_bar_active_style_light</item>
        <item name="menu_icon">@color/menu_icon_light</item>
        <item name="color_primary">@color/colorPrimary</item>
        <item name="color_star">@android:color/black</item>
        <item name="divider_list">@color/divider_list_light</item>



        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/bg_primary_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:editTextColor">@color/text_body_light</item>
    </style>

    <style name="BaseBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CommentBottomSheetStyleWrapper</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="CommentBottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>